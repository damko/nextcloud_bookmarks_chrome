{
  "manifest_version": 2,

  "name": "Nextcloud-Bookmarks",
  "description": "Nextcloud-Bookmarks Chrome Extension",
  "version": "0.0.1",
  // Options for the extensions (v.2)
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "nextcloud-bookmarks.png",
    "default_popup": "nextcloud-bookmarks.html",
    "default_title": "Nextcloud-Bookmarks Chrome Extension"
  },
  "commands": {
    "quickly-add-bookmark": {
      "suggested_key": {
        "default": "Alt+B",
        "windows": "Alt+B",
        "chromeos": "Alt+B",
        "linux": "Alt+B"
      },
      "description": "It lets you add and search your Nextcloud bookmarks",
      "global": false
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S",
        "windows": "Alt+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      }
    }
  },
  // Extension permissions
  "permissions": [
    "tabs",
    "activeTab",
     "storage"
  ]
}